{
  "version": 2,
  "name": "quickbunny-staging",
  "builds": [
    { "src": "nest build", "use": "@vercel/node" },
    {
      "prebuild": "rimraf dist",
      "build": "nest build",
      "start": "node dist/main.js",
      "dev": "nodemon nest start --watch",
      "test": "jest",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "typeorm": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
      "migrate": "yarn typeorm migration:run",
      "migration:generate": "yarn typeorm migration:generate -n",
      "migration:create": "yarn typeorm migration:create -- -n ",
      "migration:rollback": "yarn typeorm migration:revert",
      "migration:config": "dotenv ts-node scripts/generate_migration_file"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "node dist/main.js" }
  ]
}
